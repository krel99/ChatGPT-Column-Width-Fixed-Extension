{
  "manifest_version": 3,
  "name": "ChatGPT Full-Width Column",
  "version": "1.0.0",
  "description": "Expands ChatGPT conversation column to use full width on large screens.",
  "options_page": "options.html",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://chat.qwen.ai/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://grok.x.ai/*",
        "https://grok.com/*",
        "https://x.ai/*",
        "https://x.com/i/grok*",
        "https://twitter.com/i/grok*"
      ],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ]
}
